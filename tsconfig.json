{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": [
        "ES2022"
    ],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "src/",
    "outDir": "lib/",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "typings/"
  },
  "include": [
    "src/"
  ]
}
